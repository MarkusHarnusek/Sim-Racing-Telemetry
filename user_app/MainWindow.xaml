<Window x:Class="Sim_Racing_Telemetry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sim_Racing_Telemetry"
        mc:Ignorable="d"
        Title="Sim Racing Telemetry" 
        Background="{DynamicResource Background}"
        Width="800"
        Height="550" 
        MinWidth="800"
        MinHeight="500">

    <Grid>

        <Grid
            x:Name="Grd_Main"
            Visibility="Visible"
            Margin="50,25,50,25">

            <Grid.RowDefinitions>

                <RowDefinition
                    Height="*"
                    MaxHeight="75"/>

                <RowDefinition
                    Height="5*"/>
            </Grid.RowDefinitions>

            <Viewbox
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="250,15,250,0"
                MaxWidth="350"
                Stretch="Uniform">

                <TextBlock
                    Text="Sim Racing Telemetry"
                    FontWeight="Medium"
                    FontFamily="{StaticResource Montserrat}"
                    Foreground="{DynamicResource Text}"/>
            </Viewbox>

            <Grid
                Grid.Row="1"
                Margin="0,20,0,0">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*"
                        MaxWidth="300"/>

                    <ColumnDefinition
                        Width="3*"/>
                </Grid.ColumnDefinitions>

                <Rectangle
                    Grid.Column="0"
                    Fill="{DynamicResource DarkGrey}"/>

                <Grid
                    Margin="10">

                    <Grid.RowDefinitions>

                        <RowDefinition
                            Height="*"/>

                        <RowDefinition
                            Height="*"/>

                        <RowDefinition
                            Height="*"/>

                        <RowDefinition
                            Height="5*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>
        </Grid>

        <Grid
            x:Name="Grd_Setup"
            Visibility="Collapsed">

            <Grid.RowDefinitions>

                <RowDefinition
                    Height="*"/>

                <RowDefinition
                    MinHeight="30"
                    MaxHeight="50"/>
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="50">

                <Button
                    x:Name="Btn_Setup_Next"
                    Style="{StaticResource Font_Size_Up_Button_Style}"
                    Content="Next"
                    VerticalAlignment="Bottom"
                    Margin="225,0,225,0"
                    FontSize="15"
                    MinHeight="25"
                    MaxWidth="300"
                    MaxHeight="45" Click="Btn_Setup_Next_Click"/>

                <Grid
                    x:Name="Grd_Setup_DeviceType"
                    Visibility="Collapsed"
                    Margin="0,0,0,35">

                    <TextBlock
                        Text="Device"
                        Foreground="White"/>
                </Grid>

                <Grid
                    x:Name="Grd_Setup_DeviceIP"
                    Visibility="Collapsed"
                    Margin="0,0,0,35">

                    <TextBlock
                        Text="IP"
                        Foreground="White"/>
                </Grid>

                <Grid
                    x:Name="Grd_Setup_Customization"
                    Visibility="Collapsed"
                    Margin="0,0,0,35">

                    <TextBlock
                        Text="Customization"
                        Foreground="White"/>
                </Grid>

                <Grid
                    x:Name="Grd_Setup_Finished"
                    Visibility="Collapsed"
                    Margin="0,0,0,35">

                    <TextBlock
                        Text="Finished"
                        Foreground="White"/>
                </Grid>
            </Grid>

            <Grid
                Margin="50,0"
                Grid.Row="1">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition
                        Width="*"/>

                    <ColumnDefinition
                        Width="*"/>

                    <ColumnDefinition
                        Width="*"/>

                    <ColumnDefinition
                        Width="*"/>
                </Grid.ColumnDefinitions>

                <Rectangle
                    x:Name="Rct_Setup_Progress0"
                    Grid.Column="0"
                    Margin="2,17.5"
                    MinHeight="15"
                    MaxHeight="10"
                    RadiusX="7.5"
                    RadiusY="7.5"
                    Fill="{DynamicResource Foreground}"/>

                <Rectangle
                    x:Name="Rct_Setup_Progress1"
                    Grid.Column="1"
                    Margin="2,17.5"
                    MinHeight="15"
                    MaxHeight="10"
                    RadiusX="7.5"
                    RadiusY="7.5"
                    Fill="{DynamicResource Foreground}"/>

                <Rectangle
                    x:Name="Rct_Setup_Progress2"
                    Grid.Column="2"
                    Margin="2,17.5"
                    MinHeight="15"
                    MaxHeight="10"
                    RadiusX="7.5"
                    RadiusY="7.5"
                    Fill="{DynamicResource Foreground}"/>

                <Rectangle
                    x:Name="Rct_Setup_Progress3"
                    Grid.Column="3"
                    Margin="2,17.5"
                    MinHeight="15"
                    MaxHeight="10"
                    RadiusX="7.5"
                    RadiusY="7.5"
                    Fill="{DynamicResource Foreground}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
